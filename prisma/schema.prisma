generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String        @id @default(cuid())
  email         String?       @unique
  emailVerified DateTime?
  name          String?
  image         String?
  role          Role          @default(CANDIDATE)
  profile       Profile?
  ownedCompany  Company?      @relation("CompanyOwner")
  createdAt     DateTime      @default(now())
  applications  Application[]
  resumes       Resume[]
  accounts      Account[]
  sessions      Session[]
}

enum Role {
  CANDIDATE
  EMPLOYER
  ADMIN
}

model Profile {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String   @unique
  headline   String?
  cohortType Cohort?
  skills     String[] @default([])
  experience Json?
}

enum Cohort {
  RETURNING
  YOUTH
  OLDER
  GENERAL
}

model Company {
  id       String  @id @default(cuid())
  owner    User    @relation("CompanyOwner", fields: [ownerId], references: [id])
  ownerId  String  @unique
  name     String
  website  String?
  verified Boolean @default(false)
  jobs     Job[]
}

model Job {
  id                   String        @id @default(cuid())
  company              Company       @relation(fields: [companyId], references: [id])
  companyId            String
  title                String
  description          String
  tags                 String[]      @default([])
  secondChanceFriendly Boolean       @default(false)
  entryLevel           Boolean       @default(false)
  remote               Boolean       @default(false)
  salaryMin            Int?
  salaryMax            Int?
  featured             Boolean       @default(false)
  createdAt            DateTime      @default(now())
  applications         Application[]
}

model Application {
  id          String            @id @default(cuid())
  job         Job               @relation(fields: [jobId], references: [id])
  jobId       String
  candidate   User              @relation(fields: [candidateId], references: [id])
  candidateId String
  coverLetter String?
  resumeUrl   String?
  status      ApplicationStatus @default(APPLIED)
  createdAt   DateTime          @default(now())
}

enum ApplicationStatus {
  APPLIED
  VIEWED
  SHORTLISTED
  REJECTED
  HIRED
}

model Resume {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  url         String
  template    String
  generatedAt DateTime     @default(now())
  expiresAt   DateTime?
  downloads   Int          @default(0)
  status      ResumeStatus @default(PENDING)
}

enum ResumeStatus {
  PENDING
  PROCESSING
  READY
  FAILED
}

model ResumeJob {
  id          String          @id @default(cuid())
  userId      String
  template    String
  status      ResumeJobStatus @default(QUEUED)
  resumeId    String?
  createdAt   DateTime        @default(now())
  processedAt DateTime?
}

enum ResumeJobStatus {
  QUEUED
  PROCESSING
  DONE
  FAILED
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
