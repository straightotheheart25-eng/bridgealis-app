# Bridgealis Cloud Run Quick Deploy Configuration
# Copy this file and update the values, then run: ./deploy-cloud-run.sh

# REQUIRED: Your GCP Project ID
PROJECT_ID="your-project-id"

# REQUIRED: Choose your region (us-central1, us-east1, europe-west1, etc.)
REGION="us-central1"

# REQUIRED: Database password (use a strong password)
DB_PASSWORD="your-secure-password-here"

# REQUIRED: Google OAuth credentials (get from https://console.cloud.google.com/apis/credentials)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Optional: Customize these if needed
DB_INSTANCE_NAME="bridgealis-db"
SERVICE_NAME="bridgealis-app"
WORKER_JOB_NAME="bridgealis-worker"
